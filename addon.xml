<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.tagMusicFiles" name="Tag Music Files" version="1.0" provider-name="paulo9z">
	<requires>
		<import addon="xbmc.python" version="2.25.0"/>
                <import addon="xbmc.gui" version="5.12.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">GUI to rate music files and to write it into ID3 tag</summary>
		<description lang="en">This addon allows the user to rate a music file via a simple and easy to use window. The rate is betwwen 0 and 10 stars as kodi do. Moreover, the addon will write the rating value into the ID3 tags o fthe file. The better way to use it is to map a remote key to launch this addon on musicosd window</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<forum>http://forum.kodi.tv/showthread.php?tid=</forum>
		<source>https://github.com/paulo9z/plugin.audio.tagMusicFiles</source>
		<website>Kodi.tv</website>
		<email>paulo9z@kodi.org</email>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<news>v1.0 (2017-03-21)
                - Initialised the addon</news>
	</extension>
</addon>
